          .input-group
            input(type='radio' name='modalbox-width' data-class-name='--full-size')#modalbox-width-1
            label(for='modalbox-width-1') Full width
          .input-group
            input(type='radio' name='modalbox-width' data-class-name='--fixed-size' checked=true)#modalbox-width-2
            label(for='modalbox-width-2') Fixed width - default 60%
          .input-group
            input(type='radio' name='modalbox-width' data-class-name='--wide')#modalbox-width-3
            label(for='modalbox-width-3') Wide
          .input-group
            input(type='radio' name='modalbox-width' data-class-name='--wide-short')#modalbox-width-4
