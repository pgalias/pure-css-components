extends ../_layouts/two-col

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../'
  - title = 'Components'

block side-menu
  ul.side-menu
    each position in site.data.components
      li
        a(href=position.link) #{position.name}
        - if (position.sub)
          ul
            each subposition in position.sub
              li
                a(href=subposition.link) #{subposition.name}

block main
  article#accordion
    h1 #[a(href='#accordion') Accordion]
    p The word "accordion" may be imagined as a musical instrument of your favorite band, but in web design/developing accordion is a collapsible component for presenting information in limited space. On start user see only headers but when he click on one of them it will expand its content like the musical instrument. It might be used with menus, widgets, contents areas, etc.
    div
      .row
        div.acc-width-opt.col-xs-4
          h3 Width options
          div.input-group
            input(type='radio' name='acc-width' data-class-name='--full-width' checked=true)#acc-width-1
            label(for='acc-width-1') Full width
          div.input-group
            input(type='radio' name='acc-width' data-class-name='--fixed-width')#acc-width-2
            label(for='acc-width-2') Fixed width - default: 60%

        div.acc-type-opt.col-xs-4
          h3 One/multi collapsing
          div.input-group
            input(type='radio' name='acc-type' data-class-name="radio" checked=true)#acc-type-1
            label(for='acc-type-1') One
          div.input-group
            input(type='radio' name='acc-type' data-class-name="checkbox")#acc-type-2
            label(for='acc-type-2') Multiple

        div.acc-theme-opt.col-xs-4
          h3 Themes
          div.input-group
            input(type='checkbox' name='acc-themes' data-class-name='accordion--blue' checked=true)#acc-themes-1
            label(for='acc-themes-1') Add theme

      .accordion.accordion--full-width.accordion--blue
        each accordion in site.data.accordion
          .accordion__object
            input(type=accordion.input.type name=accordion.input.name id=accordion.input.id checked=accordion.input.checked)
            label(for=accordion.input.id).accordion__header #{accordion.content.heading}
            .accordion__content
              h2 #{accordion.content.heading}
              p #{accordion.content.paragraph}
